<template>
        <block>
            <view class="items {{extraClass}}" @tap="seeDetail" data-id="{{id}}" data-index="{{index}}" data-status="{{status}}">
                <view class="main-content">
                    <image class="bg-img" style="width: 100%; height:{{imgheight}};border-radius:12rpx;display:block" mode="scaleToFill" src="{{bgImg}}"> </image>
                    <text class="status {{iconstatus}}"  wx:if="{{status}}">{{status}}</text>
                    <text class="iconfont icon-cha" wx:if="{{righticon}}" @tap.stop="deleteItem" data-id="{{id}}"  data-index="{{index}}"></text>
                    <view class="list-info" wx:if="{{imgtext}}">
                        <text class="list-title">{{title}}</text>
                        <text  wx:if="{{startdate}}">{{startdate}} è‡³ </text> <text>{{enddate}}</text>
                        <text class="right-text">{{righttext}}</text>
                    </view>
                </view>
                <view class="bottom-content"  wx:if="{{bottomcontext=='true'}}">
                    <view class="bottom-left">
                        <image class="head-img" style="width:30px; height: 30px;border-radius:100%; " mode="scaleToFill" src="{{headerImg}}"> </image>
                        <text class="nick-name">{{nickname}}</text>
                    </view>
                    <view class="bottom-right {{iconstatus}}"  wx:if="{{status}}"><text class="iconfont icon-wode"></text><text >{{bottomtext}}</text></view>
                </view>
                <view class="bottom-content opacity"  wx:if="{{bottomcontext=='false'}}">
                    <view class="bottom-left">
                        <text class="title">{{bottomtitle}}</text>
                        <text class="sub-text">{{bottomsubtitle}}</text>
                    </view>
                    <view><button class="btn-round" >{{btntext}}</button></view>
                </view>
            </view>
           
        </block>
</template>
<script>
import wepy from 'wepy';

export default class indexList extends wepy.component{

    props = {
        bgImg: {
            type: String,
            default: ''
        },
        status: {
            type: String,
            default: ''
        },
        id: {
            type: String,
            default: ''
        }, 
        index: {
            type: Number
        },
        imgheight: {
            type: String,
            default: '280rpx'
        }, 
        extraClass: {
            type: String,
            default:''
        },
        bottomtitle: {
            type: String,
            default: ''
        },
        bottomsubtitle: {
            type: String,
            default: ''
        },
        btntext: {
            type: String,
            default: ''
        },
        enddate: {
            type: String,
            default: ''
        },
        startdate: {
            type: String,
            default: ''
        },
        iconstatus: {
            type: String,
            default: ''
        },
        righttext: {
            type: String,
            default: ''
        },
        title: {
            type: String,
            default: ''
        },
        bottomcontext: {
            default: true
        },
        righticon: {
            type: Boolean,
            default: true
        },
        imgtext: {
            type: Boolean,
            default: true
        },
        bottomtext: {
            type: String,
            default: ''
        },
       
        headerImg: {
            type: String,
            default: ''
        },
        nickname: {
            type: String,
            default: ''
        }
      
    }

    methods = {
        seeDetail(e){
            const id = e.currentTarget.dataset.id;
            const index = e.currentTarget.dataset.index;
            const status = e.currentTarget.dataset.status;
            this.$emit('seeDetail', {'id':id,'index':index,'status':status})
        },
        deleteItem(e){
            let deleteId = e.currentTarget.dataset.id;
            let index = e.currentTarget.dataset.index;
            this.$emit('deleteItem',{'id':deleteId,'index':index})
        }
     
    }

     
    onLoad(){
       
    }
    
}
</script>

